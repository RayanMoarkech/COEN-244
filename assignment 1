#include <iostream>

using namespace std;

void vowelcheck(char string1[]);

int main()
{

	char string1[] = "pencil";

	vowelcheck(string1);

	cout << "The new word is: " << string1;
	return 0;
}

void vowelcheck(char string1[])
{
	for (int j = 0; j < sizeof(string1); j++)
	{
		if ((string1[j] == 'a') | (string1[j] == 'e') | (string1[j] == 'i') | (string1[j] == 'o') | (string1[j] == 'u'));
		{
			for (int i = sizeof(string1) - 1; i > j; i--)
			{
				swap(string1[j], string1[i]);

			}

		}
	}

}
